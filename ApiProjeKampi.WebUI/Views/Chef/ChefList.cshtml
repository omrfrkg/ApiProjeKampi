@model List<ResultChefDto>
@{
    ViewData["Title"] = "ChefList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Şef Listesi</h4>
					</div>
					<div class="card-body">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Şef Görsel</th>
									<th scope="col">Şef Ad ve Soyad</th>
									<th scope="col">Ünvanı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Şef Görsel Url</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th scope="row">@item.ChefId</th>
										<td><img src="@item.ImageUrl" height="100" width="100" style="margin-top:10px;"/></td>
										<td>@item.NameSurname</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.ImageUrl</td>
										<td><a href="/Chef/DeleteChef/@item.ChefId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Chef/UpdateChef/@item.ChefId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Chef/CreateChef/" class="btn btn-info">Yeni Şef Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



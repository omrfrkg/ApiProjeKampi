@model GetMessageByIdDto
@{
    ViewData["Title"] = "AnswerMessageWithOpenAI";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>OpenAI ile Otomatik Mesaj Yanıt Sayfası</h4>
					</div>
					<div class="card-body">
						<form method="post">
							<div class="form-group">
								<input type="hidden" asp-for="MessageId" />
								<label>Müşteri Mesajı</label>
								<textarea class="form-control" asp-for="MessageDetails" style="height:200px !important" readonly></textarea>
								<br />
								<label>OpenAI Ile Otomatik Cevapla</label>
								<textarea class="form-control" style="height:200px !important">@ViewBag.answerAI</textarea>
								<br />
								<button class="btn btn-primary">Cevabı Mail Olarak Gönder</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


@model List<ResultServiceDto>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Kategori Listesi</h4>
					</div>
					<div class="card-body">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Icon Url</th>
									<th scope="col">Icon</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th scope="row">@item.ServiceId</th>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.IconUrl</td>
										<td><span><i class="@item.IconUrl"></i></span></td>
										<td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Service/CreateService/" class="btn btn-info">Yeni Servis Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<h6>Not: Tema için uygun olan servis sayısı 4 adettir. Bunun dışına çıkıldığı takdirde temanın bütünlüğü bozulacaktır!</h6>
</section>



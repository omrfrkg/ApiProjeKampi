@model CreateProductDto
@{
	ViewData["Title"] = "CreateProduct";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Ürün Ekleme Sayfası</h4>
					</div>
					<div class="card-body">
						<form method="post">
							<div class="form-group">
								<label>Ürün Adı</label>
								<input type="text" class="form-control" asp-for="ProductName">
								<br />
								<label>Açıklama</label>
								<input type="text" class="form-control" asp-for="Description">
								<br />
								<label>Fiyat</label>
								<input type="text" class="form-control" asp-for="Price">
								<br />
								<label>Ürün görseli <code>Lütfen kaydetmek istediğiniz ürünün URL uzantısını buraya yapıştırın!</code></label>
								<input type="text" class="form-control" asp-for="ImageUrl">
								<br />
								<label>Ürünün Kategorisi</label>
								@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
								<br />
								<button class="btn btn-primary">Ürünü Oluştur</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


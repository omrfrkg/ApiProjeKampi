@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Kategori Ekleme Sayfası</h4>
					</div>
					<div class="card-body">
						<form method="post">
							<div class="form-group">
								<label>Adres</label>
								<input type="text" class="form-control" asp-for="Address">
								<br />
								<label>Telefon</label>
								<input type="text" class="form-control" asp-for="Phone">
								<br />
								<label>Email</label>
								<input type="text" class="form-control" asp-for="Email">
								<br />
								<label>Açık Saatler</label>
								<input type="text" class="form-control" asp-for="OpenHours">
								<br />
								<label>Google Map Kodu</label>
								<input type="text" class="form-control" asp-for="MapLocation">
								<br />
								<button class="btn btn-primary">İletişim Bilgisini Oluştur</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

